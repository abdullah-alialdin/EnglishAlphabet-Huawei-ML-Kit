<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">#e6e6e6</item>
    </style>

    <style name="arrow_styles">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">@dimen/arrow_margin</item>
        <item name="android:layout_weight">@dimen/default_weight</item>
    </style>

    <style name="category_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/category_text_padding</item>
        <item name="android:paddingLeft">@dimen/category_text_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="category_text_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/category_text_padding_tab</item>
        <item name="android:paddingLeft">@dimen/category_text_padding_tab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="footer_adView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="follow_image_button">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/bottom_nav</item>
    </style>

    <style name="license_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">all</item>
        <item name="android:padding">@dimen/license_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="main_card_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="color_circle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/bottom_nav</item>
    </style>

</resources>
